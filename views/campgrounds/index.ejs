<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Being Healthy!</h1>
             <p>An Efficient Doctor Patient Portal</p>
             <p>
                <a class="btn btn-primary btn-large" href="/campgrounds/new">Find Doctor</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   
                   <div class="caption">
                       <h4><%= campground.name %></h4>
                       
                   </div>
                   
                   <div class="caption">
                        <h4><%= campground.Disease %></h4>
                    </div>
                    
                   <div class="caption">
                        <h4><%= campground.desc %></h4>
                    </div>
                    
                   <div class="caption">
                        <h4><%= campground.Age %></h4>
                    </div>
                    
                   <div class="caption">
                        <h4><%= campground.Disease_score %></h4>
                    </div>
                   <p>
                       <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">Book Appointment</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>                     
</div>

<% include ../partials/footer %>
